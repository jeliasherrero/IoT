<h2 class="lead">Registrarse en nuestro sistema</h2>
{{#if errors}}
	{{#each errors}}
		<div class="alert alert-danger">{{msg}} </div>
	{{/each}}
{{/if}}
<form method="post" action="/users/register">
	<div class="form-group">
		<label>Nombre y apellidos</label>
		<input type="text" class="form-control" name="name" placeholder="Dinos tu nombre y apellidos">
	</div>
	<div class="form-group">
		<label>Nombre de usuario</label>
		<input type="text" class="form-control" name="username" placeholder="Elige tu nombre de usuario">
	</div>
	<div class="form-group">
		<label>Email</label>
		<input type="email" class="form-control" name="email" placeholder="Correo electrónico">
	</div>
	<div class="form-group">
		<label>Contraseña</label>
		<input type="password" class="form-control" name="password" placeholder="Contraseña">
	</div>
	<div class="form-group">
		<label>Confirma tu contraseña</label>
		<input type="password" class="form-control" name="password2" placeholder="Contraseña">
	</div>
	<button type="submit" class="btn btn-default">Registrarse</button>
</form>